<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view_separator_2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/textViewDescription"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp" />

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pollutants_circular_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="How are specific pollutants near me?"
        android:id="@+id/textViewDescription"
        android:background="@color/gray_blue"
        android:textColor="@color/bold_blue"
        android:paddingLeft="5dp"
        android:textSize="16sp"
        android:paddingTop="15dp" />

    <!--android:layoutAnimation="@anim/fragment_pollutants_animation"-->
</RelativeLayout>
