<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="185dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/accent_material_dark"
        android:backgroundTintMode="screen"
        android:clickable="true">
        <com.hookedonplay.decoviewlib.DecoView
            xmlns:custom="https://schemas.android.com/apk/res-auto"
            custom:dv_lineWidth="26dp"
            android:id="@+id/single_circular_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/pollutant_center_color"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pollutant_view_green" />

        <TextView
            android:id="@+id/pollutant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:gravity="right|center_vertical"
            android:text="Pollutant"
            android:layout_above="@+id/pollutant_center_color"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/pollutant_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:gravity="right|center_vertical"
            android:text="Value"

            android:layout_below="@+id/pollutant_center_color"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>